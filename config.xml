<?xml version="1.0" encoding="UTF-8"?>
<widget id="com.cosmickmedia.storeuploader"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>StoreUploader</name>
    <description>Hybrid shell for the StoreUploader PWA</description>
    <author email="service@cosmickmedia.com" href="https://www.cosmickmedia.com">
        Cosmick Media
    </author>

    <!-- Point at your PHP entrypoint -->
    <content src="index.php"/>

    <!-- Allow your app to load any resource -->
    <access origin="*"/>

    <!-- Orientation lock (optional) -->
    <preference name="Orientation" value="portrait"/>

    <!-- Android-specific intents -->
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>

    <!-- iOS-specific intents -->
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
